<footer class="site-footer">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">

        <div class="block-7">
          <h3 class="footer-heading mb-4">{{footerData.leftTitle}}</h3>
          {{{footerData.leftContent}}}
        </div>

      </div>
      <div class="col-lg-3 mx-auto mb-5 mb-lg-0">
        <h3 class="footer-heading mb-4">{{footerData.centerTitle}}</h3>
        <ul class="list-unstyled">
          {{#each footerData.centerLinks}}
          <li><a href="{{this.fields.menuUrl}}">{{this.fields.menuName}}</a></li>
          {{/each}}
        </ul>
      </div>

      <div class="col-md-6 col-lg-3">
        <div class="block-5 mb-5">
          <h3 class="footer-heading mb-4">{{footerData.rightTitle}}</h3>
          {{{footerData.rightContent}}}
        </div>
      </div>
    </div>
    <div class="row pt-5 mt-5 text-center">
      <div class="col-md-12">
        {{{footerData.copyright}}}
      </div>
    </div>
  </div>
</footer>
</div>