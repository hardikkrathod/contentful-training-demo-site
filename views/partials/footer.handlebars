<div class="site-section bg-secondary bg-image">
  <div class="container">
    <div class="row align-items-stretch">
      {{#each footerData.topFooter}}
      <div class="col-lg-6 mb-5 mb-lg-0">
        <a href="{{this.fields.url}}" class="banner-1 h-100 d-flex" style="background-image: url('{{this.fields.image.fields.file.url}}');">
          <div class="banner-1-inner {{#if @index}} ml-auto {{/if}} align-self-center">
            <h2>{{this.fields.title}}</h2>
            {{{this.fields.desc}}}
          </div>
        </a>
      </div>
      {{/each}}
