<div class="bg-light py-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12 mb-0"><a href="/">Home</a> <span class="mx-2 mb-0">/</span> <a href="/product">Product</a>
        <span class="mx-2 mb-0">/</span> <strong class="text-black">{{productDetailsData.name}}</strong></div>
    </div>
  </div>
</div>

<div class="site-section">
  <div class="container">
    <div class="row">
      <div class="col-md-5 mr-auto">
        <div class="border text-center">
          <img src="{{productDetailsData.image.fields.file.url}}" alt="{{productDetailsData.image.fields.title}}"
            class="img-fluid p-2">
        </div>
      </div>
      <div class="col-md-6">
        <h2 class="text-black">{{productDetailsData.name}}</h2>

        <div class="mt-3">
          <div class="tab-content">
            <div class="tab-pane fade show active" role="tabpanel" aria-labelledby="pills-profile-tab">
              <table class="table custom-table">
                <tbody>
                  <tr>
                    <td>Packing</td>
                    <td class="bg-light">{{{productDetailsData.packing}}}</td>
                  </tr>
                  <tr>
                    <td>Type</td>
                    <td class="bg-light">{{productDetailsData.type.fields.typeName}}</td>
                  </tr>
                  <tr>
                    <td>Compotion</td>
                    <td class="bg-light">
                      <ul class="list-unstyled">
                        {{{productDetailsData.compotion}}}
                      </ul>
                    </td>
                  </tr>
                  <tr>
                    <td>Flavour</td>
                    <td class="bg-light">
                      <ul class="list-unstyled">
                        {{{productDetailsData.flavour}}}
                      </ul>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>